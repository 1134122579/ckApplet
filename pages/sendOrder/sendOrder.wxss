/* pages/accessories/index.wxss */
page {
  background: #fff;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.bttonStyle {
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
  background: #16D46B;

}

.icon {
  width: 60rpx;
  height: 60rpx;
}

.fontStyle {
  font-size: 30rpx;
  margin-top: 20rpx;
  text-align: center;
}

/* 条码内容 */
.contentStyle {
  width: 100%;
  height: 100%;
  padding-top: 50px;
}

.SpanAround {
  justify-content: space-around;
}

.inputStyleArr {
  width: 80%;
  box-sizing: border-box;
}

.trStyle {
  flex: 1;
  white-space: nowrap;
  font-size: 40rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  text-align: center;
  font-weight: 700;
  box-sizing: border-box;
}

.weight {
  padding: 20rpx 0;
  font-weight: normal;
  font-size: 30rpx;
}

.thCode {
  flex-shrink: 0;
  font-size: 28rpx;
  /* width: 200rpx; */
}

.inputStyle {
  width: 40%;
  height: 40px;
  border: 1px solid #F2F2F2;
}

.inputStylePX {
  width: 30%;
  height: 40px;
  border: 1px solid #F2F2F2;
}

/* 选择 数量 */
.weightweight {
  margin-top: 30px;
}

.buttonStyle {
  margin: 0 60rpx;
  margin-top: 50px;
}

.matginTop {
  margin-top: 10px;
}

.picker {
  padding: 10rpx 20rpx;
  border: 1px solid #F2F2F2;
  box-sizing: border-box;
  border-radius: 5rpx;
}

.tagStyle {
  font-size: 24rpx;
  color: #333;
}

.nomael {
  font-weight: normal;
  font-size: 28rpx;
}
/* 完成 */
.okUpload{
  border: 1px solid #333;
width: 40%;
text-align: center;
height: 34px;
line-height: 34px;
  border-radius: 10rpx;
  margin: 40px auto;
}