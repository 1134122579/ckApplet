/* pages/home/index.wxss */
.HomeStyle{
  margin-bottom: 100rpx;
}
.title{
  display: block;
  width: 100%;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  font-weight: 800;
  letter-spacing: 10rpx;
}
.content{
  margin: 0 auto;
  display: block;
  width: 76%;
  background: chartreuse;
}
.w_box{
  width: 50%;

  box-sizing: border-box;
}
/* 字 */
.sizeStyle{
  text-align: center;
  font-size: 50rpx;
  padding: 40rpx 60rpx;
  letter-spacing: 10rpx;
}
/* 线 */
.borderTop{
  border-top: 1rpx solid #ffffff;
}
.borderRight{
  border-right: 1rpx solid #ffffff;
}
.navImage{
  width: 100%;
  height:250rpx ;
}
